<h1>Mis posts</h1>
<table>
	<tr>
		<th>Titulo</th>
		<th>Texto</th>
		<th colspan="3">Opciones</th>
	</tr>
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.text %></td>
			<td><%= link_to 'Show', post_path(post) %></td>
			<td><%= link_to 'Edit', edit_post_path(post) %></td>
			<td><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Estas seguro? D:'} %></td>
		</tr>
	<% end %>
</table>